{
  "compilerOptions": {
    "outDir": "lib/esm",
    "rootDir": "./",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmitOnError": true, ///look into it
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/hooks/useRandomInterval.tsx",
    "src/hooks/useRainbow.tsx",
    "src/hooks/usePreventAnimation.tsx",
    "src/hooks/usePrefersReducedMotion.tsx",
    "src/hooks/useIncrementingNumber.tsx",
    "src/hooks/useLocalStorage.tsx"
  ],
  "exclude": ["node_modules", "lib"]
}
